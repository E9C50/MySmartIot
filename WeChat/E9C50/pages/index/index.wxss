@import '/style/weui.wxss';

/**index.wxss**/
.userinfo {
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info-panle {
  width: 46%;
  height: max-content;
  padding-top: 5px;
  padding-bottom: 5px;
  margin: auto ;
  text-align: center;
  border-radius: 10px;
  background: #f2f2f2;
  color: black;
}

.switch-button {
  width: 30%;
  height: 100rpx;
  margin: auto;
  text-align: center;
}

.switch-button>switch {
  margin-top: 10px;
}